{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2016",                                                                
    "outDir": "dist",           
    "baseUrl": "src",     
    "sourceMap": true,                  
    "allowSyntheticDefaultImports": true,           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                   
    "skipLibCheck": true                                
  },
  "include": ["src/**/*"]
}
